<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingActivity">

    <Preference
        android:key="option"
        android:layout="@layout/setting" />

        <PreferenceCategory
            style="PreferenceCategoryStyle"
            android:key="basic_settings"
            android:title="基本设置">
        <SwitchPreference
            android:defaultValue="true"
            android:key="refresh_data"
            android:summary="开启后按设定频率自动更新课表"
            android:title="课表自动更新" />

        <ListPreference
            android:dependency="refresh_data"
            android:dialogTitle="选择课表更新频率"
            android:entries="@array/day_entities"
            android:entryValues="@array/day_values"
            android:key="refresh_data_frequency"
            android:summary="选择课表更新频率"
            android:defaultValue="3"
            android:title="课表更新频率" />

        <CheckBoxPreference
            android:key="optionA"
            android:summary="这里是选项测试a"
            android:summaryOff="禁止A"
            android:summaryOn="允许A"
            android:title="选项测试A" />
        <CheckBoxPreference
            android:dependency="optionA"
            android:key="optionB"
            android:summary="这里是选项测试b"
            android:summaryOff="禁止B"
            android:summaryOn="允许B"
            android:title="选项测试B" />

        <CheckBoxPreference
            android:checked="true"
            android:key="optionC"
            android:summary="这里是选项测试c"
            android:summaryOff="禁止C"
            android:summaryOn="允许C"
            android:title="选项测试C" />
    </PreferenceCategory>

    <PreferenceCategory android:title="复合选项">

        <ListPreference
            android:dialogTitle="对话框标题"
            android:entries="@array/day_entities"
            android:entryValues="@array/day_values"
            android:key="option2_1"
            android:summary="请选择时间"
            android:title="时间" />


        <MultiSelectListPreference
            android:dialogIcon="@mipmap/ic_launcher"
            android:entries="@array/day_entities"
            android:entryValues="@array/day_values"
            android:key="option2_2"
            android:title="消息类型" />

        <PreferenceScreen
            android:key="option2_3"
            android:summary="打开哔哩哔哩"
            android:title="哔哩哔哩">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.bilibili.com/" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>