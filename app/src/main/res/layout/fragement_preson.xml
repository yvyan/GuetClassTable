<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical"
    tools:context=".fragment.PersonFragment">

    <RelativeLayout
        android:id="@+id/more_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="109dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="30px"
            android:text="个人信息与设置"
            android:textColor="@color/app_white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/setting" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/images_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/table" />

        <LinearLayout
            android:id="@+id/afterLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="陈金涛"
                android:textColor="@color/app_black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1800100606"
                android:textColor="@color/app_black"
                android:textSize="20dp" />


        </LinearLayout>

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/before_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="点击登录"
            android:textSize="30dp"
            app:rb_backgroundColor="@color/colorPrimary" />

    </LinearLayout>

    <View style="@style/horizontal_line_style" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@android:drawable/ic_menu_myplaces"
        stv:sLeftTextColor="#000000"
        stv:sLeftTextSize="15sp"
        stv:sLeftTextString="个人信息"
        stv:sRightIconRes="@drawable/ic_right_next" />


    <com.allen.library.SuperTextView
        android:id="@+id/tv_password_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@android:drawable/ic_lock_idle_lock"
        stv:sLeftTextColor="#000000"
        stv:sLeftTextSize="15sp"
        stv:sLeftTextString="设置密码"
        stv:sRightIconRes="@drawable/ic_right_next" />


    <com.allen.library.SuperTextView
        android:id="@+id/tv_info_help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@android:drawable/ic_menu_agenda"
        stv:sLeftTextColor="#000000"
        stv:sLeftTextSize="15sp"
        stv:sLeftTextString="关于与帮助"
        stv:sRightIconRes="@drawable/ic_right_next" />


    <com.allen.library.SuperTextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftIconRes="@android:drawable/ic_menu_share"
        stv:sLeftTextColor="#000000"
        stv:sLeftTextSize="15sp"
        stv:sLeftTextString="分享"
        stv:sRightIconRes="@drawable/ic_right_next" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_profile_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V1.0.0"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>


    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login_btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        app:rb_backgroundColor="@color/app_red" />


</LinearLayout>