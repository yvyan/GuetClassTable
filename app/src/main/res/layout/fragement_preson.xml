<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.PersonFragment">

    <RelativeLayout
        android:id="@+id/more_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:text="个人信息与设置"
            android:textColor="@color/app_white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/person_setting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/setting" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/person_userInfo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/images_head"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/p_huiyuan" />

                        <LinearLayout
                            android:id="@+id/person_userNameAndNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/person_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/app_black"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/person_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text=""
                                android:textColor="@color/app_black"
                                android:textSize="18dp" />


                        </LinearLayout>

                        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                            android:id="@+id/person_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="点击登录"
                            android:textSize="28dp"
                            app:rb_backgroundColor="@color/colorPrimary" />

                    </LinearLayout>

                    <View
                        android:id="@+id/person_line_1"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:id="@+id/person_userInfo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="年级"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/person_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textSize="18dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="学年"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/person_term"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textSize="18dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="周数"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/person_week"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=""
                                android:textSize="18dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/person_help"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="8dp">

                    <ImageView

                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/p_bangzhu"
                        android:layout_marginLeft="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:text="帮助与进阶"
                        android:textColor="@color/app_black"
                        android:textSize="16dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginLeft="53dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/xui_config_color_gray_9" />

                <RelativeLayout
                    android:id="@+id/person_share"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/p_ziyuan"
                        android:layout_marginLeft="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:text="分享给同学"
                        android:textColor="@color/app_black"
                        android:textSize="16dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginLeft="53dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/xui_config_color_gray_9" />

                <RelativeLayout
                    android:id="@+id/person_update"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/p_shengji"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:text="检查更新"
                        android:textColor="@color/app_black"
                        android:textSize="16dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginLeft="53dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/xui_config_color_gray_9" />

                <LinearLayout
                    android:id="@+id/person_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/p_xiazai"
                            android:layout_marginLeft="2.6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="45dp"
                            android:text="酷安下载"
                            android:textColor="@color/app_black"
                            android:textSize="16dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="53dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/xui_config_color_gray_9" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/person_download_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/p_cloud"
                            android:layout_marginLeft="2.6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="45dp"
                            android:text="所有版本下载"
                            android:textColor="@color/app_black"
                            android:textSize="16dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="53dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/xui_config_color_gray_9" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/person_about"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="8dp">

                    <ImageView

                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/p_guanyu"
                        android:layout_marginLeft="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:text="关于APP"
                        android:textColor="@color/app_black"
                        android:textSize="16dp"/>

                </RelativeLayout>

                <View
                    android:layout_marginLeft="53dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/xui_config_color_gray_9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/app_white"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="版本:"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_profile_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                android:id="@+id/btn_quit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/login_btn_login"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="退出登录"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                app:rb_backgroundColor="@color/app_red" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>