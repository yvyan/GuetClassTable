<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DayClassFragment">

    <View
        android:id="@+id/add_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#902ABFFD" />

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#902ABFFD">

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:text="@string/titleBar_1"
            android:textColor="@color/app_white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/day_class_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="97dp"
            android:textColor="@color/app_white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/day_text"
            app:layout_constraintTop_toTopOf="@id/day_text" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/day_class_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#C0ffffff"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="快捷工具"
                        android:textColor="@color/app_black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/day_show_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  |  "
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/day_show_exam_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/day_test_schedule"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|center"
                            android:baselineAlignBottom="false"
                            android:src="@drawable/m_qingjia"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/moreFun_test_schedule"
                            android:textSize="13sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/day_url_bkjw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|center"
                            android:baselineAlignBottom="false"
                            android:src="@drawable/m_jiaowu"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/moreFun_url_bkjw"
                            android:textSize="13sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/more_graduation_requirement"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/day_test_scores"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|center"
                            android:baselineAlignBottom="false"
                            android:src="@drawable/m_chengjihov"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/moreFun_test_scores"
                            android:textSize="13sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/day_credits"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|center"
                            android:baselineAlignBottom="false"
                            android:src="@drawable/m_chengchang"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/moreFun_credits"
                            android:textSize="13sp" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/day_class_detail_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>